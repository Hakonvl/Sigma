// Vertex Shader – file "minimal.vert"
 
#version 140
 
in  vec3 in_Position;
in  vec3 in_Color;
uniform  vec2 in_Offset;
out vec3 ex_Color;
 
void main(void)
{
	in_Position.x += in_Offset.x;
	in_Position.y += in_Offset.y;
	gl_Position.xyz = in_Position;
	gl_Position.w = 1.0;
        ex_Color = in_Color;
}